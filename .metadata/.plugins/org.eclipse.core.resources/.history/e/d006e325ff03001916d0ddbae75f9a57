package DNAtoRNA;
import java.io.*;
import java.util.*;
public class DNA2RNA 
{
	private String dna;
	private String rna;

	public DNA2RNA(String dna, String rna)
	{
		this.dna=dna;
		this.rna=rna;
	}
	public String dnaFileReader() throws IOException
	{
		File file=new File("data/rosalind_rna.txt");
		FileReader fr=new FileReader(file);
		BufferedReader br=new BufferedReader(fr);
		dna=br.readLine();
		br.close();
		fr.close();
		return dna;
	}
	public String getDNA()
	{
		return dna;
	}
	public String dnaTorna()
	{
		StringBuffer nrna=new StringBuffer("");
		for (int i=0;i<dna.length();i++)
		{
			char n=dna.charAt(i);
			if(n=='T')
			{
				nrna.append('U');
			}
			else 
			{
				nrna.append(n);
			}
		}
		this.rna=nrna.toString();
		return rna;
	}
	public String getRNA()
	{
		return rna;
	}
	public void main(String[] args)
	{
		
		System.out.println(getRNA());
	}
}
